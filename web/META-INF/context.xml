<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <!-- Specifying a JDBC datasource -->
    <Resource
        name="jdbc/conference"
        auth="Container"
        type="javax.sql.DataSource"
        username="root"
        password="root"
        url="jdbc:mysql://localhost:3306/conference?autoReconnect=true&amp;serverTimezone=UTC"
        defaultAutoCommit="false"
        defaultTransactionIsolation="READ_COMMITTED"
        maxActive="50"
        maxIdle="20"
        maxWait="10000"
    />

</Context>
